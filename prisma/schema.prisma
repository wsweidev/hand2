generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_URL")
}

model Comment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   String
}

